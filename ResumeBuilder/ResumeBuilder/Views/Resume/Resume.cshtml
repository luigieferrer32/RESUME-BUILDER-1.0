@model ResumeBuilder.ViewModel.PersonInfoVM


@using System.Web.Optimization

@Scripts.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width-device-width" />
    <h2>Let's complete your Resume Heading</h2>
    <h3>This section shows your contact information so hiring managers can contact you.</h3>
</head>
<body>

    @using (Html.BeginForm("Resume", "Resume", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="container " style="outline-color:gray; outline-style:solid">
            <div class="row">
                <form role="form">
                    <div class="col-lg-6">
                        <div class="well well-sm"><strong><span class="glyphicon glyphicon-asterisk"></span>Tell us about yourself</strong></div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="InputName">First Name</label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control col-md-12", @id = "txtFirstname", @placeholder = "First Name" } })
                                    @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <label for="InputEmail">Last Name</label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control col-md-12", @id = "txtLastname", @placeholder = "Last Name" } })
                                    @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="InputEmail">Street Address</label>
                            <div class="input-group ">
                                @Html.EditorFor(model => model.Street_Address, new { htmlAttributes = new { @class = "form-control col-md-12", @id = "txtAddress", @placeholder = "Street Address" } })
                                @Html.ValidationMessageFor(model => model.Street_Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="InputMessage">Province</label>
                                <div class="input-group">
                                    @Html.EditorFor(model => model.State_Province, new { htmlAttributes = new { @class = "form-control col-md-12", @id = "txtProvince", @placeholder = "Province" } })
                                    @Html.ValidationMessageFor(model => model.State_Province, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="InputEmail">ZipCode</label>
                                <div class="input-group ">
                                    @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control col-md-8", @id = "txtZipcode", @placeholder = "ZipCode" } })
                                    @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="InputEmail">Email Address</label>
                                <div class="input-group ">
                                    @Html.EditorFor(model => model.Email_Address, new { htmlAttributes = new { @class = "form-control", @id = "txtEmailAddress", @placeholder = "Email Address" } })
                                    @Html.ValidationMessageFor(model => model.Email_Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="InputEmail">Phone</label>
                                <div class="input-group ">
                                    @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control ", @id = "Phone", @placeholder = "Phone" } })
                                    @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <input type="submit" class="btn btn-info" style="position: relative; right: -150%;" value="Next: Work Experience" />
                    </div>
                </form>

            </div>
        </div>

    }
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@Scripts.Render("~/js/Resume.js")
<script type="text/javascript">
    var UpdateInfoUrl = '@Url.Action("UpdateAssistance", "Resume")';
</script>