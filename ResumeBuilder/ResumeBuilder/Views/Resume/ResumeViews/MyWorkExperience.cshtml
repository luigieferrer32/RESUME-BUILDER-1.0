@model ResumeBuilder.ViewModel.WorkExperienceVM
@{
    ViewBag.Title = "MyWorkExperience";
}
<div class="container" style="outline-color:gray; outline-style:solid">
    <div class="row">
        <form role="form">
            <div class="col-lg-12">
                <div class="well well-sm"><strong><span class="glyphicon glyphicon-asterisk"></span>Tell us about your Work Experience</strong></div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="InputName">Job Title</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.Job_Title, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Job Title" } })
                            @Html.ValidationMessageFor(model => model.Job_Title, "", new { @class = "text-danger" })
                            @*<input type="text" class="form-control" name="InputName" id="InputName" placeholder="Enter Name" required>
                <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>*@
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="InputEmail">Employer</label>
                        <div class="input-group">
                            @*<input type="email" class="form-control" id="InputEmailFirst" name="InputEmail" placeholder="Enter Email" required>*@
                            @Html.EditorFor(model => model.Employer, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Employer" } })
                            @Html.ValidationMessageFor(model => model.Employer, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="form-group col-md-6">
                        <label for="InputEmail">City</label>
                        <div class="input-group ">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "City" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="InputMessage">State</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "State" } })
                            @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                         
                            <span></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputEmail">Start Month And Year</label>
                    <div class="input-group ">
                        @Html.DropDownListFor(model => model.Start_Month, Model.ListStartMonth, "Select Month", new { @class = "col-lg-auto" })
                        @Html.DropDownListFor(model => model.Start_Year, Model.ListStartYear, "Select Year", new { @class = "col-lg-auto" })
                      
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputEmail">End Month And Year</label>
                    <div class="input-group ">
                        @Html.DropDownListFor(model => model.End_Month, Model.ListEndMonth, "Select Month", new { @class = "col-lg-auto" })
                        @Html.DropDownListFor(model => model.End_Year,  Model.ListEndYear, "Select Year", new { @class = "col-lg-auto" })
                        @*<input type="email" class="form-control" id="InputEmailSecond" name="InputEmail" placeholder="Confirm Email" required>
                <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>*@
                    </div>
                </div>
                <button type="button" id="AddOrUpdateExperience" class="btn" style="background-color: #e066ff; color:#FFF;position: relative; left: 4%"> <span class="glyphicon glyphicon-book" aria-hidden="true"></span>  Add Work Experience</button>
                <a href="@Url.Action("Education","Resume")" class="btn" style="position: relative; right: -100%; color:#FFF; background-color: #e066ff"> Next Step>> Education </a>
                @*<input type="submit" name="submit" id="submit" value="Submit" class="btn btn-info float-xs-right">*@
            </div>
        </form>

    </div>
</div>

